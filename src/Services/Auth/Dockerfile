FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 5001

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["PinkVision.Auth.API/PinkVision.Auth.API.csproj", "PinkVision.Auth.API/"]
RUN dotnet restore "PinkVision.Auth.API/PinkVision.Auth.API.csproj"
COPY . .
WORKDIR "/src/PinkVision.Auth.API"
RUN dotnet build -c Release -o /app/build

FROM build AS publish
RUN dotnet publish -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "PinkVision.Auth.API.dll"]
